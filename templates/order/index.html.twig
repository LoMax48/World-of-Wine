{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    {% for order in orders %}
        <div class="container mx-3 my-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Заказ №{{ order.id }}</h5>
                    <p class="card-text">{{ order.client }}</p>
                    {% for contain in order.contains %}
                        <p class="card-text">{{ contain }}</p>
                    {% endfor %}
                    <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-outline-primary my-2">Подтверждение заказа</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
