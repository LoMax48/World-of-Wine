{% extends 'base.html.twig' %}

{% block title %}{{ name.name }}{% endblock %}

{% block body %}
    <div class="container mx-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ name.name }}</h5>
                <p class="card-text">{{ name.description|striptags}}</p>
                <p class="card-text">{{ name.color }}</p>
                <p class="card-text">{{ name.sweetness}}</p>
                <p class="card-text">Алкоголь: {{ name.degrees }}%</p>
                <p class="card-text">Сахар: {{ name.sugar }} г/л</p>
                <div class="card-footer">Цена: {{ name.price }} рублей</div>
            </div>
        </div>
    <div>
    {% if is_granted('ROLE_USER') %}
        {{ form(contains_form) }}
    {% endif %}
    <a href="{{ path('name_index') }}" class="btn btn-outline-primary my-2">Вернуться к каталогу</a>
{% endblock %}
